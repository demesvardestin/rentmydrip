<%= form_for(@io, :html => { :multipart => true }) do |f| %>
    <div class="field">
        <div class="row">
            <div class="col-md-6">
                <%= f.label :first_name %>
                <%= f.text_field :first_name, class:"form-control", placeholder:"First Name" %>
            </div>
            
            <div class="col-md-6">
                <%= f.label :last_name %>
                <%= f.text_field :last_name, class:"form-control", placeholder:"Last Name" %>
            </div>
        </div>
    </div>
    
    <div class="field">
        <div class="row">
            <div class="col-md-12">
                <%= f.label :street_address %>
                <%= f.text_field :street_address, class:"form-control", placeholder:"Street Address" %>
            </div>
        </div>
        
        <div class="row">
            <div class="col-md-4">
                <%= f.label :city %>
                <%= f.text_field :city, class:"form-control", placeholder:"City" %>
            </div>
            <div class="col-md-4">
                <%= f.label :state %>
                <%= f.text_field :state, class:"form-control", placeholder:"State" %>
            </div>
            <div class="col-md-4">
                <%= f.label :zipcode %>
                <%= f.text_field :zipcode, class:"form-control", placeholder:"Zipcode" %>
            </div>
        </div>
    </div>
    
    <div class="submit">
        <%= f.submit "Update Profile Details", class:"btn btn-success btn-block",
            data: { :disable_with => "updating..." } %>
    </div>
<% end %>