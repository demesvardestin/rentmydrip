<%= form_for(@image, :html => { :multipart => true }) do |f| %>
    <div class="field">
        <%= f.label :images %>
        <%= f.file_field :sources, multiple: true %>
    </div>
    
    <div class="actions">
        <%= f.submit "Attach images", class:"btn btn-primary btn-block",
            data: { "disable-with": "Attaching images..."} %>
    </div>
<% end %>