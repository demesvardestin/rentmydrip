<section id="checkout">
    <div class="row">
        <div class="col-md-12">
            <h6>
              <i class="fas fa-lock"></i> Secure checkout
            </h6>
            
            <hr>
            
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 cart-details">
                            <% @cart.item_orders.each do |o| %>
                                <div class="row">
                                    <div class="col-md-4">
                                        <div class="img-container">
                                            <img src="<%= o.inventory_item.image.first_source %>"
                                                title="<%= o.inventory_item.item_name %>"
                                                alt="<%= o.inventory_item.item_name %>">
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <a href="<%= o.inventory_item.url %>">
                                            <h6>
                                                <strong>
                                                    <%= o.inventory_item.item_name %>
                                                </strong>
                                            </h6>
                                        </a>
                                        
                                        <div class="item-name">
                                            <p>
                                                <strong>
                                                    <a href="/brand/<%= o.inventory_item.item_brand %>">
                                                        <%= o.inventory_item.item_brand %>
                                                    </a>
                                                </strong>
                                            </p>
                                        </div>
                                        
                                        <div class="item-size">
                                            <p>
                                                Size: US L/EU M
                                            </p>
                                        </div>
                                        
                                        <div class="item-market-value">
                                            <p>
                                                Estimated Market Value: $<%= o.inventory_item.market_value %>
                                            </p>
                                        </div>
                                        
                                        <div class="item-condition">
                                            <p>
                                                Condition: <%= o.inventory_item.condition %>
                                            </p>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-2">
                                        <span class="rental_price">
                                            <strong>
                                                <%= number_to_currency o.inventory_item.rental_price %>
                                            </strong>
                                        </span>
                                    </div>
                                </div>
                                
                                <% unless o == @cart.item_orders.last %>
                                    <hr class="hr">
                                <% end %>
                            <% end %>
                        </div>
                        
                        <div class="col-md-6 payment-details">
                            <form method="post" action="/pay">
                                <div class="field">
                                    <label>Name on card</label>
                                    <input type="text" name="card_name" id="card-name"
                                        placeholder="Name on card" class="form-control">
                                </div>
                                
                                <div class="field">
                                    <label>Card number</label>
                                    <input type="text" name="card_number" id="card-number"
                                        placeholder="Card number" class="form-control">
                                </div>
                                
                                <div class="field">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>Expiration date</label>
                                            <input type="text" name="card_expiration"
                                                id="card-expiration" class="form-control"
                                                placeholder="Card expiration">
                                        </div>
                                        
                                        <div class="col-md-6">
                                            <label>Security code</label>
                                            <input type="text" name="security code"
                                                id="security-code" class="form-control"
                                                placeholder="Security code">
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="actions">
                                    <input type="submit" class="btn btn-theme btn-block"
                                        value="Submit payment">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>